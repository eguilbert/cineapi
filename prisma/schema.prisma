generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema", "postgresqlExtensions"]
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  extensions        = [pgcrypto]
  schemas           = ["public"]
}

model Film {
  id                    Int                        @id @default(autoincrement())
  tmdbId                Int                        @unique
  title                 String
  genre                 String
  category              String?
  synopsis              String?
  releaseDate           DateTime?
  duration              Int?
  budget                Int?
  origin                String?
  posterUrl             String?
  commentaire           String?
  rating                Float?
  actors                String?
  keywords              String?
  trailerUrl            String?
  seances               Int                        @default(1)
  directorId            Int?
  releaseCanDate        DateTime?
  awards                Award[]
  externalLinks         ExternalLink[]
  director              Director?                  @relation(fields: [directorId], references: [id])
  comments              FilmComment[]
  productionCountries   FilmCountry[]
  filmTags              FilmFilmTag[]
  interests             Interest[]
  programmations        Programmation[]
  afcae                 Boolean                    @default(false)
  programmingComments   ProgrammingComment[]       @relation("Film_ProgrammingComments")
  selections            SelectionFilm[]
  selectionProgrammings SelectionFilmProgramming[] @relation("Film_Programmings")
  votes                 Vote[]                     @relation("FilmVotes")
  filmProjections       FilmProjection[]
  lists                 ListFilm[] // ðŸ‘ˆ accÃ¨s pivot
  PublicRating          PublicRating[]
  FilmFollow            FilmFollow[]

  @@index([releaseDate])
  @@index([category])
  @@index([category, releaseDate])
  @@index([directorId])
  @@schema("public")
}

model FilmComment {
  id          Int         @id @default(autoincrement())
  film_id     Int         @map("film_id")
  user_id     String      @map("user_id")
  commentaire String
  created_at  DateTime    @default(now()) @map("created_at")
  film        Film        @relation(fields: [film_id], references: [id])
  user        UserProfile @relation(fields: [user_id], references: [user_id])

  @@unique([film_id, user_id])
  @@map("FilmComment")
  @@schema("public")
}

model Selection {
  id                  Int                        @id @default(autoincrement())
  name                String
  date                DateTime                   @default(now())
  description         String?
  status              String                     @default("selection") // DRAFT | OPEN | CLOSED | PROGRAMMATION
  voteClosed          Boolean                    @default(false)
  voteDate            DateTime?
  programmingComments ProgrammingComment[]       @relation("Selection_ProgrammingComments")
  cinemas             SelectionCinema[]
  films               SelectionFilm[]
  programmings        SelectionFilmProgramming[] @relation("Selection_Programmings")
  filmProjections     FilmProjection[]

  @@index([date])
  @@index([status])
  @@schema("public")
}

model SelectionFilm {
  id          Int       @id @default(autoincrement())
  filmId      Int
  selectionId Int
  commentaire String?
  note        Int?
  category    String?
  score       Float?
  selected    Boolean   @default(false)
  createdAt   DateTime  @default(now())
  film        Film      @relation(fields: [filmId], references: [id])
  selection   Selection @relation(fields: [selectionId], references: [id], onDelete: Cascade)

  // ðŸ‘‡ intÃ©rÃªts + votes de programmation
  interests ProgrammingInterest[]
  votes     ProgrammingVote[]

  @@unique([filmId, selectionId])
  @@unique([selectionId, filmId]) // pivot unique
  @@index([selectionId, score]) // lister les films dâ€™une sÃ©lection triÃ©s par score
  @@index([filmId]) // retrouver vite les sÃ©lections dâ€™un film
  @@schema("public")
}

model ProgrammingInterest {
  id              Int           @id @default(autoincrement())
  selectionFilmId Int
  userId          Int
  value           InterestLevel
  createdAt       DateTime      @default(now())

  selectionFilm SelectionFilm @relation(fields: [selectionFilmId], references: [id])

  @@unique([selectionFilmId, userId]) // 1 intÃ©rÃªt par user et par film dans CETTE sÃ©lection
  @@index([selectionFilmId, value])
  @@index([userId])
  @@schema("public")
}

model ProgrammingVote {
  id              Int      @id @default(autoincrement())
  selectionFilmId Int
  userId          Int
  weight          Int      @default(1) // ex: nb de voix allouÃ©es par film
  createdAt       DateTime @default(now())

  selectionFilm SelectionFilm @relation(fields: [selectionFilmId], references: [id])

  @@unique([selectionFilmId, userId]) // 1 vote agrÃ©gÃ© par user (modifiable)
  @@index([selectionFilmId])
  @@index([userId])
  @@schema("public")
}

model FilmProjection {
  id            Int      @id @default(autoincrement())
  filmId        Int
  cinemaId      Int
  date          DateTime
  hour          String
  salle         String?
  audienceCount Int?
  commentaire   String?
  selectionId   Int?
  programmingId Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  film        Film                      @relation(fields: [filmId], references: [id])
  cinema      Cinema                    @relation(fields: [cinemaId], references: [id])
  selection   Selection?                @relation(fields: [selectionId], references: [id])
  programming SelectionFilmProgramming? @relation("Programming_Projections", fields: [programmingId], references: [id])

  @@index([filmId])
  @@index([cinemaId])
  @@index([date])
  @@index([filmId, date])
  @@index([cinemaId, date])
  @@schema("public")
}

model SelectionFilmProgramming {
  id               Int      @id @default(autoincrement())
  selectionId      Int
  filmId           Int
  cinemaId         Int
  suggested        Int      @default(0)
  capLabel         String?
  notes            String?
  cycleId          Int?
  totalSpectateurs Int?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  selection Selection @relation("Selection_Programmings", fields: [selectionId], references: [id], onDelete: Cascade)
  film      Film      @relation("Film_Programmings", fields: [filmId], references: [id], onDelete: Cascade)
  cinema    Cinema    @relation("Cinema_Programmings", fields: [cinemaId], references: [id])
  cycle     Cycle?    @relation(fields: [cycleId], references: [id])

  filmProjections FilmProjection[] @relation("Programming_Projections")

  @@unique([selectionId, filmId, cinemaId])
  @@schema("public")
}

model ProgrammingComment {
  id          Int         @id @default(autoincrement())
  selectionId Int
  filmId      Int
  cinemaId    Int?
  user_id     String
  commentaire String
  createdAt   DateTime    @default(now())
  cinema      Cinema?     @relation("Cinema_ProgrammingComments", fields: [cinemaId], references: [id])
  film        Film        @relation("Film_ProgrammingComments", fields: [filmId], references: [id], onDelete: Cascade)
  selection   Selection   @relation("Selection_ProgrammingComments", fields: [selectionId], references: [id], onDelete: Cascade)
  user        UserProfile @relation("UserProfile_ProgrammingComments", fields: [user_id], references: [user_id])

  @@index([selectionId, filmId, cinemaId])
  @@schema("public")
}

model Cycle {
  id           Int                        @id @default(autoincrement())
  name         String
  slug         String                     @unique
  description  String?
  startDate    DateTime?
  endDate      DateTime?
  programmings SelectionFilmProgramming[]

  @@schema("public")
}

model Director {
  id    Int    @id @default(autoincrement())
  name  String @unique
  films Film[]

  @@index([name])
  @@schema("public")
}

model Country {
  id    Int           @id @default(autoincrement())
  name  String        @unique
  films FilmCountry[]

  @@schema("public")
}

model FilmCountry {
  filmId    Int
  countryId Int
  country   Country @relation(fields: [countryId], references: [id])
  film      Film    @relation(fields: [filmId], references: [id])

  @@id([filmId, countryId])
  @@schema("public")
}

model Programmation {
  id        Int      @id @default(autoincrement())
  jour      String
  heure     String
  salle     String
  filmId    Int
  createdAt DateTime @default(now())
  film      Film     @relation(fields: [filmId], references: [id])

  @@schema("public")
}

model FilmTag {
  id        Int           @id @default(autoincrement())
  label     String        @unique
  category  String
  validated Boolean       @default(false)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  films     FilmFilmTag[]

  @@schema("public")
}

model FilmFilmTag {
  id     Int     @id @default(autoincrement())
  filmId Int
  tagId  Int
  film   Film    @relation(fields: [filmId], references: [id], onDelete: Cascade)
  tag    FilmTag @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([filmId, tagId], name: "filmId_tagId")
  @@schema("public")
}

model Award {
  id       Int    @id @default(autoincrement())
  prize    String
  festival String
  year     Int?
  filmId   Int
  film     Film   @relation(fields: [filmId], references: [id], onDelete: Cascade)

  @@schema("public")
}

model ExternalLink {
  id     Int    @id @default(autoincrement())
  url    String
  label  String
  filmId Int
  film   Film   @relation(fields: [filmId], references: [id], onDelete: Cascade)

  @@schema("public")
}

model Cinema {
  id                    Int                        @id @default(autoincrement())
  name                  String
  slug                  String                     @unique
  programmingComments   ProgrammingComment[]       @relation("Cinema_ProgrammingComments")
  selections            SelectionCinema[]
  selectionProgrammings SelectionFilmProgramming[] @relation("Cinema_Programmings")
  users                 UserProfile[]
  votes                 Vote[]
  filmProjections       FilmProjection[]

  @@schema("public")
}

model SelectionCinema {
  selectionId Int
  cinemaId    Int
  cinema      Cinema    @relation(fields: [cinemaId], references: [id])
  selection   Selection @relation(fields: [selectionId], references: [id])

  @@id([selectionId, cinemaId])
  @@schema("public")
}

model UserProfile {
  user_id             String               @id
  cinemaId            Int?
  role                String?              @default("INVITE")
  username            String?
  activityLogs        ActivityLog[]
  comments            FilmComment[]
  interests           Interest[]
  programmingComments ProgrammingComment[] @relation("UserProfile_ProgrammingComments")
  cinema              Cinema?              @relation(fields: [cinemaId], references: [id])
  user                User                 @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  user_votes          Vote[]               @relation("UserVotes")

  @@index([cinemaId])
  @@schema("public")
}

model Vote {
  id           Int         @id @default(autoincrement())
  user_id      String
  filmId       Int
  note         Int
  commentaire  String?
  cinemaId     Int
  createdAt    DateTime    @default(now())
  cinema       Cinema      @relation(fields: [cinemaId], references: [id])
  film         Film        @relation("FilmVotes", fields: [filmId], references: [id])
  user_profile UserProfile @relation("UserVotes", fields: [user_id], references: [user_id], onDelete: Cascade)

  @@unique([user_id, filmId])
  @@schema("public")
}

model Interest {
  id        String        @id @default(uuid())
  user_id   String
  film_id   Int
  value     InterestLevel @default(SANS_OPINION)
  createdAt DateTime      @default(now())
  film      Film          @relation(fields: [film_id], references: [id])
  user      UserProfile   @relation(fields: [user_id], references: [user_id])

  @@unique([user_id, film_id])
  @@index([film_id, value]) // groupBy counts rapides
  @@index([user_id]) // rÃ©cupÃ©rer mes intÃ©rÃªts
  @@schema("public")
}

model ActivityLog {
  id        Int         @id @default(autoincrement())
  userId    String
  action    String
  targetId  Int?
  context   String?
  createdAt DateTime    @default(now())
  user      UserProfile @relation(fields: [userId], references: [user_id], onDelete: Cascade)

  @@schema("public")
}

model User {
  id             String       @id @default(dbgenerated("gen_random_uuid()"))
  email          String       @unique
  username       String?
  hashedPassword String?
  role           String?
  cinemaId       Int?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @default(now())
  Key            Key[]        @ignore
  sessions       Session[]
  userProfile    UserProfile?

  @@schema("public")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@schema("public")
}

model interest_staging {
  id        String        @id
  user_id   String
  film_id   Int
  value     InterestLevel @default(SANS_OPINION)
  createdAt DateTime      @default(now())

  @@unique([user_id, film_id], map: "interest_staging_user_id_film_id_idx")
  @@schema("public")
}

/// The underlying table does not contain a valid unique identifier and can therefore currently not be handled by Prisma Client.
model Key {
  id             String
  hashedPassword String?
  userId         String
  primary        Boolean @default(false)
  User           User    @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@ignore
  @@schema("public")
}

model PublicRating {
  id        Int               @id @default(autoincrement())
  filmId    Int
  userId    Int
  value     PublicRatingValue
  createdAt DateTime          @default(now())

  film Film @relation(fields: [filmId], references: [id])

  @@unique([filmId, userId]) // 1 note par user & par film (modifiable)
  @@index([filmId, value])
  @@index([userId])
  @@schema("public")
}

model FilmFollow {
  id        Int      @id @default(autoincrement())
  filmId    Int
  userId    Int
  createdAt DateTime @default(now())

  film Film @relation(fields: [filmId], references: [id])

  @@unique([filmId, userId]) // suivre / ne plus suivre
  @@index([userId])
  @@schema("public")
}

// List "tÃªte"
model List {
  id          Int       @id @default(autoincrement())
  name        String
  slug        String    @unique
  type        ListType
  scope       ListScope @default(GLOBAL)
  description String?
  coverUrl    String?
  isPublic    Boolean   @default(true)

  // portÃ©e/ownership (optionnels selon le type)
  ownerId  Int?
  cinemaId Int?

  // critÃ¨res pour listes dynamiques / systÃ¨me (JSON libre)
  criteria Json?

  films     ListFilm[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([type])
  @@index([scope])
  @@index([ownerId])
  @@index([cinemaId])
  @@schema("public")
}

// Pivot avec ordre
model ListFilm {
  listId    Int
  filmId    Int
  rank      Int? // pour ordonner manuellement une liste CURATED
  comment   String?
  addedById Int?
  createdAt DateTime @default(now())

  list List @relation(fields: [listId], references: [id], onDelete: Cascade)
  film Film @relation(fields: [filmId], references: [id], onDelete: Cascade)

  @@id([listId, filmId])
  @@index([filmId])
  @@index([listId, rank])
  @@schema("public")
}

enum InterestLevel {
  SANS_OPINION
  NOT_INTERESTED
  CURIOUS
  MUST_SEE
  VERY_INTERESTED

  @@schema("public")
}

enum ListType {
  CURATED
  DYNAMIC
  FAVORITES
  SYSTEM

  @@schema("public")
}

enum ListScope {
  GLOBAL
  CINEMA
  USER

  @@schema("public")
}

enum PublicRatingValue {
  DISLIKE
  NEUTRAL
  LIKE
  LOVE

  @@schema("public")
}
